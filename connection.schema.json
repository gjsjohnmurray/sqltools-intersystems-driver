{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "namespace": {
      "title": "Namespace",
      "type": "string",
      "minLength": 1,
      "default": "USER"
    },
    "username": {
      "title": "Username",
      "type": "string",
      "minLength": 1
    },
    "askForPassword": {
      "title": "Ask for password?",
      "type": "boolean",
      "default": false
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 1
    }
  },
  "properties": {
    "connectionMethod": {
      "title": "Connect using",
      "type": "string",
      "minLength": 1,
      "enum": [
        "Server and Port",
        "Server Manager"
      ],
      "default": "Server and Port"
    },
    "namespace": { "$ref": "#/definitions/namespace" },
    "showSystem": {
      "title": "Show system items?",
      "type": "boolean",
      "default": false
    }
  },
  "dependencies": {
    "connectionMethod": {
      "oneOf": [
        {
          "properties": {
            "connectionMethod": {
              "enum": ["Server and Port"]
            },
            "server": {
              "title": "Server address or name",
              "type": "string",
              "minLength": 1,
              "default": "localhost"
            },
            "port": {
              "title": "WebServer port",
              "minimum": 1,
              "default": 52773,
              "type": "integer"
            },
            "https": {
              "title": "Use HTTPS",
              "default": false,
              "type": "boolean"
            },
            "username": { "$ref": "#/definitions/username" },
            "askForPassword": { "$ref": "#/definitions/askForPassword" }
          },
          "required": ["server", "port", "username"]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": ["Server Manager"]
            },
            "server": {
              "title": "Server definition name",
              "type": "string",
              "minLength": 1,
              "default": ""
            }
          },
          "required": ["server"]
        }
      ]
    },
    "askForPassword": {
      "oneOf": [
        { "properties": { "askForPassword": { "enum": [true] } } },
        {
          "properties": {
            "askForPassword": { "enum": [false] },
            "password": { "$ref": "#/definitions/password" }
          },
          "required": ["password"]
        }
      ]
    }
  },
  "required": [
    "connectionMethod", "namespace"
  ]
}